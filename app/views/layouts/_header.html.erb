<div class="header" id="home">
  <div class="container">
    <% if user_signed_in? %>
      <ul>
        <li>
          <i class="fa fa-user" aria-hidden="true"></i>
          <%= link_to current_user.name, edit_user_registration_path(current_user) %>
        </li>
        <li><i class="fa fa-phone" aria-hidden="true"></i> <%= current_user.phone %></li>
        <li>
          <i class="fa fa-envelope" aria-hidden="true"></i>
          <a href="#"><%= current_user.email %></a>
        </li>
        <li><i class="fa fa-sign-out" aria-hidden="true"></i>
          <%= link_to t(".log_out"), destroy_user_session_path,  method: :delete %>
        </li>
      </ul>
    <% else %>
      <ul>
        <li>
          <%= link_to "Sign in", new_user_session_path %>
        </li>
        <li>
          <%= link_to "Sign up", new_user_registration_path %>
        </li>
      </ul>
    <% end %>
  </div>
</div>
