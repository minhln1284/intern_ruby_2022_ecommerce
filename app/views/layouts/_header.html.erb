<div class="header" id="home">
  <div class="container">
    <% if user_signed_in? %>
      <ul>
        <li>
          <i class="fa fa-user" aria-hidden="true"></i>
          <%= link_to current_user.name, edit_user_registration_path(current_user) %>
        </li>
        <li><i class="fa fa-phone" aria-hidden="true"></i> <%= current_user.phone %></li>
        <li>
          <i class="fa fa-envelope" aria-hidden="true"></i>
          <a href="#"><%= current_user.email %></a>
        </li>
        <li><i class="fa fa-sign-out" aria-hidden="true"></i>
          <%= link_to t(".log_out"), destroy_user_session_path,  method: "delete" %>
        </li>
      </ul>
    <% else %>
      <ul>
        <li>
          <%= link_to t("static_pages.sign_in"), new_user_session_path %>
        </li>
        <li>
          <%= link_to t("static_pages.sign_up"), new_user_registration_path %>
        </li>
      </ul>
    <% end %>
  </div>
</div>
<!-- //header -->
<!-- header-bot -->
<div class="header-bot">
  <div class="header-bot_inner_wthreeinfo_header_mid">
    <div class="col-md-4 header-middle">
      <%= search_form_for @q, url: products_path,
                        html: { method: :get } do |f| %>
        <%= f.search_field :name_cont %>
        <%= submit_tag "" %>
      <% end %>
      <div class="clearfix"></div>
    </div>
    <!-- header-bot -->
    <div class="col-md-4 logo_agile">
      <h1>
        <%= link_to root_path do %>
          <span>E</span>lite Shoppy
          <i class="fa fa-shopping-bag top_logo_agile_bag"
            aria-hidden="true"
          ></i>
        <% end %>
      </h1>
    </div>
    <!-- header-bot -->
    <div class="col-md-4 agileits-social top_content">
      <ul class="social-nav model-3d-0 footer-social w3_agile_social">
        <li class="share"><%= t "static_pages.share" %></li>
        <li>
          <a href="#" class="facebook">
            <div class="front">
              <i class="fab fa-facebook" aria-hidden="true"></i>
            </div>
            <div class="back">
              <i class="fab fa-facebook" aria-hidden="true"></i></div
          ></a>
        </li>
        <li>
          <a href="#" class="twitter">
            <div class="front">
              <i class="fab fa-twitter" aria-hidden="true"></i>
            </div>
            <div class="back">
              <i class="fab fa-twitter" aria-hidden="true"></i></div
          ></a>
        </li>
        <li>
          <a href="#" class="instagram">
            <div class="front">
              <i class="fab fa-instagram" aria-hidden="true"></i>
            </div>
            <div class="back">
              <i class="fab fa-instagram" aria-hidden="true"></i></div
          ></a>
        </li>
        <li>
          <a href="#" class="pinterest">
            <div class="front">
              <i class="fab fa-linkedin" aria-hidden="true"></i>
            </div>
            <div class="back">
              <i class="fab fa-linkedin" aria-hidden="true"></i></div
          ></a>
        </li>
      </ul>
    </div>
    <div class="clearfix"></div>
  </div>
</div>
<!-- //header-bot -->
