<div class="banner-bootom-w3-agileits">
  <div class="container">
    <div class="col-md-12">
      <div class="sort-grid">
        <div class="sorting">
          <div class="dropdown">
            <button class="dropbtn"><%= t("static_pages.filter") %></button>
            <div class="dropdown-content">
              <%= sort_link(@q, :created_at, 'Newest', default_order: :asc) %>
              <%= sort_link(@q, :created_at, 'Oldest', default_order: :desc) %>
              <%= sort_link(@q, :price, 'Cheapest', default_order: :asc) %>
              <%= sort_link(@q, :price, 'Most Expensive', default_order: :desc) %>
            </div>
          </div>
          <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
      </div>
      <% if !@products.blank? %>
        <%= render partial: "products/product", collection: @products %>
        <div class="clearfix"></div>
        <%== pagy_bootstrap_nav(@pagy) %>
      <% else %>
        <h2 class="alert alert-danger"><%= t "static_pages.category_not_found" %></h2>
      <% end %>
    </div>
    <div class="clearfix"></div>
  </div>
</div>
