<div class="banner-bootom-w3-agileits">
  <div class="container">
    <div class="col-md-12">
      <div class="sort-grid">
        <div class="sorting">
          <%= form_tag filter_category_path, method: :get do %>
            <div class="wrapper">
              <div class="second-third">
                <%= select_tag :filter , options_for_select([
                          t("static_pages.all") ,
                          t("static_pages.newest") ,
                          t("static_pages.price_increase") ,
                          t("static_pages.price_decrease") ]), class: "form-select form-select" %>
              </div>
              <div class="third-third">
                <%= submit_tag t("static_pages.filter"), class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
          <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
      </div>
      <% if !@products.blank? %>
        <%= render @products %>
        <div class="clearfix"></div>
        <%== pagy_bootstrap_nav(@pagy) %>
      <% else %>
        <h2 class="alert alert-danger"><%= t "static_pages.category_not_found" %></h2>
      <% end %>
    </div>
    <div class="clearfix"></div>
  </div>
</div>
