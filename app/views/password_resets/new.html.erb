<div class="container seperate_lines">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-4">
      <% provide :title, t(".new_pass_title") %>
      <h1><%= t ".new_pass_title" %></h1>
      <%= form_for(:password_reset, url: password_resets_path) do |f| %>
        <%= f.label t ".email" %>
        <%= f.email_field :email, class: "form-control" %>
        <%= f.submit t ".submit", class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="col-md-6">
      <%= image_tag "confirmation.jpg" %>
    </div>
  </div>
</div>
