<div id="layoutSidenav">
    <div id="layoutSidenav_nav">
      <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
        <div class="sb-sidenav-menu">
          <div class="nav">
            <div class="sb-sidenav-menu-heading"><%= t "admin.static_pages.main" %></div>
            <%= link_to admin_root_path, class: "nav-link", :action => 'get' do %>
              <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
              <%= t "admin.static_pages.dashboard" %>
            <% end %>
            <div class="sb-sidenav-menu-heading"><%= t "admin.static_pages.manage" %></div>
            <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseLayouts"
              aria-expanded="false" aria-controls="collapseLayouts">
              <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
              <%= t "admin.static_pages.tables" %>
              <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
            </a>
            <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
              <nav class="sb-sidenav-menu-nested nav">
                <%= link_to t("admin.static_pages.category"), admin_categories_path, class: "nav-link" %>
              </nav>
              <nav class="sb-sidenav-menu-nested nav">
                <%= link_to t("admin.order.orders"), admin_orders_path, class: "nav-link" %>
              </nav>
              <nav class="sb-sidenav-menu-nested nav">
                <%= link_to t("admin.product.products"), admin_products_path, class: "nav-link" %>
              </nav>
              <nav class="sb-sidenav-menu-nested nav">
                <%= link_to t("admin.user.users"), admin_users_path, class: "nav-link" %>
              </nav>
            </div>
            <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapsePages"
              aria-expanded="false" aria-controls="collapsePages">
              <div class="sb-nav-link-icon"><i class="fas fa-book-open"></i></div>
              <%= t "admin.static_pages.communicate" %>
              <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
            </a>
            <div class="collapse" id="collapsePages" aria-labelledby="headingTwo" data-bs-parent="#sidenavAccordion">
              <nav class="sb-sidenav-menu-nested nav">
                <%= link_to :sidekiq, sidekiq_web_path, class: "nav-link" %>
              </nav>
            </div>
          </div>
        </div>
      </nav>
    </div>
    <div id="layoutSidenav_content">
      <main>
        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %> alert_mess"><%= message %></div>
        <% end %>
        <%= yield %>
      </main>
    </div>
</div>
