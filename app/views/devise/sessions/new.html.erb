<div class="container seperate_lines">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-4">
      <h2><%= t "sessions.new.log_in" %></h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group mb-3">
          <%= f.label :email %>
          <%= f.text_field :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" }, class: "form-control" %>
        </div>
        <div class="form-group mb-3">
          <%= f.label :password %>
          <%= f.password_field :password,
                required: false,
                input_html: { autocomplete: "current-password" }, class: "form-control" %>
        </div>
        <div class="form-group mb-3">
          <%= f.label :remember_me %>
          <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <br>
        <div class="form-group">
          <%= f.submit t("sessions.new.log_in"), class: "btn btn-default" %>
        </div>
      <% end %>
      <br>
      <br>
      <%= render "devise/shared/links" %>
    </div>
    <div class="col-md-6">
      <%= image_tag "login.jpg" %>
    </div>
  </div>
</div>
