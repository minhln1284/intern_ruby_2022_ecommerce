
<div class="container">
<h2><%= t"sessions.new.log_in" %></h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Email address</label>
    <%= f.input_field :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" }, class: "form-control", id: "exampleInputEmail1" %>
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Password</label>
    <%= f.input_field :password,
                required: false,
                input_html: { autocomplete: "current-password" }, class: "form-control", id: "exampleInputPassword1" %>
  </div>
  <div class="mb-3">
    <%= f.check_box :remember_me, type: "checkbox", class: "form-check-input", id: "exampleCheck1" if devise_mapping.rememberable? %>
    <label class="form-check-label" for="exampleCheck1">Remember me</label>
  </div>
  <%= f.button :submit, "Log in", type: "submit", class: "btn btn-primary" %>
<% end %>
</div>
<div class="container">
  <%= render "devise/shared/links" %>
</div>
